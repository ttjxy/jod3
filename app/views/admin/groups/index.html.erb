<div class="pull-right">
  <%= link_to("新建群组", new_admin_group_path, :class => "btn btn-default" ) %>
</div>

<br><br>

<table class="table table-bordered">
  <% @groups.each do |group| %>
  <tr>
    <td>
      <%= link_to(group.title, admin_group_path(group)) %>
    </td>
    
    <td>
      <%= group.user_id %>
    </td>

    <td>

      <%= link_to("编辑群组", edit_admin_group_path(group)) %>
      <%= link_to("删除群组", admin_group_path(group), :method => :delete, :data => { :confirm => "Are you sure?" }) %>

    </td>
    <td>
      <%= group.created_at %>
    </td>
  </tr>
  <% end %>
</table>
