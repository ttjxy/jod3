<h1> <%= @group.title %> </h1>
<%= link_to("写ORID", new_group_post_path(@group), class:"btn btn-default pull-right",:style => "font-size: 20px; text-decoration:underline;") %>

<p>
  <%= simple_format(@group.description) %>
  <table class="table">
    <thead>
     <tr>
        <th>ORID标题</th>

        <th>发表者</th>
        <th>发表时间</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>

          <td><%= link_to(post.title, group_post_path(post.group, post) )%></td>
          <td><%= post.user.email %></td>
          <td><%= post.created_at %></td>
          <td>
            <td> <%= link_to('编辑', edit_group_post_path(post.group, post), class: "btn btn-default btn-xs") %></td>
            <td> <%= link_to('删除', group_post_path(post.group, post), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-default btn-xs") %></td>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</p>
